<% include ./partials/header %>
<div class="ui main text container segment">
  <div class="ui hug header"> Edit <%- blog.title %> </div>
  <form class="ui form" action="/blogs/<%= blog._id %>? _method = PUT" method="POST">
    <div class="field">
      <label for="">Title</label>
      <input type="text" name="blog[title]" value=" <%= blog.title %>">
    </div>

    <div>
      <label for="">Image</label>
      <input type="text" name="blog[image]" value=" <%= blog.image %>">
    </div>

    <div>
      <label for="">Blog Content</label>
      <textarea name="blog[body]" rows="8" cols="80"><%= blog.body %></textarea>
    </div>

    <input class="ui violet big basic button" type="submit" name="" value="">
  </form>
</div>

<% include ./partials/footer %>
